<div class="container">
 <h1>Create your calendar</h1>
 
  <%= simple_form_for(@calendar, html: { class: 'form-horizontal' }) do |c| %>
    <%= c.input :start_date %>
    <%= c.input :end_date %>
    <%= c.input :mondays %>
    <%= c.input :tuesdays %>
    <%= c.input :wednesdays %>
    <%= c.input :thursdays %>
    <%= c.input :fridays %>
    <%= c.input :saturdays %>
    <%= c.input :sundays %>
  
  <%= c.button :submit %>
  <% end %>
  
</div>
 
     